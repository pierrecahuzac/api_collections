generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  username    String?
  password    String
  createdAt   DateTime     @default(now())
  collections Collection[]
}

model Collection {
  id          String   @id @default(uuid())
  title       String?
  type        String
  owner       User     @relation(fields: [userId], references: [id])
  userId      String
  image       String?
  description String?
  createdAt   DateTime @default(now())
  items       Item[]
}

model Item {
  id          String       @id @default(uuid())
  name        String
  type        String?
  collections Collection[]
  price       Int?
  quantity    Int?
  gencode     Int?
  image       String?
  description String?
  createdAt   DateTime     @default(now())
}
